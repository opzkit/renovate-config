{
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies",
    ":pinDependencies",
    ":semanticCommits"
  ],
  "baseBranches": [
    "main"
  ],
  "rebaseWhen": "conflicted",
  "labels": [
    "dependencies"
  ],
  "automergeStrategy": "squash",
  "automergeType": "pr",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "kubernetes": {
    "fileMatch": [
      "k8s/.+\\.yaml$",
      "kind/.+\\.yaml$"
    ]
  },
  "hermit": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes",
        "pre-commit",
        "dockerfile",
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pinDigest"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Schedule Renovate pre-commit hook updates weekly on mondays (0:00-1:59)",
      "matchPackageNames": [
        "renovatebot/pre-commit-hooks"
      ],
      "schedule": [
        "* 0-1 * * 1"
      ]
    }
  ]
}
