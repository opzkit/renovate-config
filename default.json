{
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies",
    ":pinDependencies",
    ":semanticCommits"
  ],
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pre-commit": {
    "enabled": true
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+\\.yaml$", "kind/.+\\.yaml$"]
  },
  "hermit": {
    "enabled": true
  }
}
